<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeUser"
    android:orientation="vertical"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="100dp"
       android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center"
       >

        <TextView
            android:id="@+id/welcome"
            android:layout_width="191dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:text="   WELCOME "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:fontFamily="@font/aldrich_regular" />

        <TextView
            android:id="@+id/name"
            android:layout_width="170dp"
            android:layout_height="62dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="0dp"
            android:textAllCaps="true"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:fontFamily="@font/aldrich_regular" />
    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button"
        android:fontFamily="sans-serif"
        android:id="@+id/trainticket"
        android:text="Train Ticket"

        android:onClick="trainticket"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:background="@drawable/round_button"
        android:fontFamily="sans-serif"
        android:id="@+id/addbalance"
        android:text="Add Balance"
        android:layout_marginTop="30dp"
        android:onClick="addBalance"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/viewDetails"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_button"
        android:fontFamily="sans-serif"
        android:onClick="vd"
        android:text="vIEW DETAILS"
        android:textColor="@color/black"
        android:textSize="20sp" />
 <!--   <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button"
        android:fontFamily="sans-serif"
        android:id="@+id/details"
        android:onClick="details"
        android:text="Details"
        android:textColor="@color/yellow"
        android:textSize="15sp" />-->
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button"
        android:fontFamily="sans-serif"
        android:onClick="onloc"
        android:text="NearBy Station"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button"
        android:fontFamily="sans-serif"
        android:id="@+id/logout"
        android:text="Logout"
        android:onClick="onLogout"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button"
        android:fontFamily="sans-serif"
        android:id="@+id/queries"
        android:text="Any Queries? \n Email Us"
        android:onClick="queries"
        android:textSize="20sp"
       />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button"
        android:fontFamily="sans-serif"
        android:text="Back to home Page"
        android:onClick="onClick"

        android:textColor="@color/black"
        android:textSize="20sp" />
</LinearLayout>
</ScrollView>
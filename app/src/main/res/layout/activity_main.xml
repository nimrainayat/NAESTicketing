<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:onClick="secondPage"
    android:id="@+id/linearlayout">


    <TextView
        android:id="@+id/name"
        android:layout_width="411dp"
        android:layout_height="62dp"
        android:layout_gravity="bottom|clip_horizontal|center|center_horizontal|center_vertical"
        android:layout_marginTop="70dp"
        android:fontFamily="sans-serif"
        android:text="NAES Ticketing "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:fontFamily="@font/aldrich_regular" />

    <ImageView
        android:id="@+id/train"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:background="@drawable/train" />




</LinearLayout>
</ScrollView>